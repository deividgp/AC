sansserif.2=-adobe-symbol-medium-r-normal--0-%d-0-0-p-0-adobe-fontspecific

sansserif.italic.0=-adobe-helvetica-medium-i-normal-0-0-%d-0-0-p-0-iso8859-1

sansserif.bold.0=-adobe-helvetica-bold-r-normal--0-%d-0-0-p-0-iso8859-1

sansserif.bolditalic.0=-adobe-helvetica-bold-i-normal--0-%d-0-0-p-0-iso8859-1

# Monospaced font definition
