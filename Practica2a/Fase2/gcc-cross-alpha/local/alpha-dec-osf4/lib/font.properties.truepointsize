monospaced.1=-adobe-zapfdingbats-medium-r-normal--0-%d-0-0-p-0-adobe-fontspecific
monospaced.2=-adobe-symbol-medium-r-normal--*-%d-*-0-p-0-adobe-fontspecific

monospaced.italic.0=-adobe-courier-medium-i-normal--0-%d-0-0-m-0-iso8859-1

monospaced.bold.0=-adobe-courier-bold-r-normal--0-%d-0-0-m-0-iso8859-1

